{% block body %}

    <div class="container-fluid">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                {% for category in categories %}

                    <a class="nav-item" href="{{path ('show_category', {'id' : category.id })}}">{{ category.title }}</a>

